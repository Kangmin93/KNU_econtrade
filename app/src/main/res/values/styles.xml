        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/textview_iconpadding</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
